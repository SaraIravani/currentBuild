pipeline{
    agent any
    stages{
        stage('Hello'){
            steps{
                sh 'echo Hello world'

            }
            post{
                successs{
                    script{
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }
        post{
            always{
                echo currentBuild.currentResult
            }
        }
    }
}